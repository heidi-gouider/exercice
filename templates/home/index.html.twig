{% extends 'base.html.twig' %}

{% block title %}Hello HomeComtroller!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{# Inclut les fichiers JS de app et app1 #}
{{ encore_entry_script_tags('app') }}
{{ encore_entry_script_tags('app1') }}


	<div class="example-wrapper text-white">
		<h1>Bienvenue !</h1>
<div id="app-root"></div>

		<div class="contenu">
			<h1 class="fst-italic mb-5">Notre catalogue</h1>
			{# <div class="container text-center"> #}

			<main class="container">
				<div class="row">
					<div class="d-flex flex-wrap justify-content-around">
						{% for  categorie in categories %}
							{# ici je vais mettre une condition pour afficher uniquement les categories parent #}
							{% if categorie.parentCategorie is null %}
								<div class="col-md-4 mb-5">
									<div class="card w-50" id="images">
										<a href="{{ path('app_sous_categorie', {'parent_categorie_id': categorie.id}) }}">
											<h5 class="card-title mt-5">{{ categorie.libelleCategorie }}</h5>
										</a>
										<p
											class="card-text">{# {{ categorie.descriptionCategorie}}</p> #}
										</p>
									</div>
								</div>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</main>
			<div class="bg-white">

				{# <div id="root"></div> #}
				{# <div id="search-component-root"></div>  #}
			</div>
			<div class="nav-item">
				<a class="nav-link text-center text-white" href="{{ path('app_react') }}">Retour Ã  l'accueil</a>
			</div>

		</div>
				<div id="first-component-root"></div>
				<div id="quiz-component-root"></div>
				{# <div id="list-component-root"></div> #}

	</div>
{% endblock %}
